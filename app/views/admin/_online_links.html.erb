<% if entry.buyer_status == 'New' || entry.buyer_status == 'Edited' %>

		<%= link_to "put online", put_online_entry_path(entry) %>

<% elsif entry.buyer_status == 'Online' %>

  <% unless entry.bids.size < 1  %>
  	<%= link_to("Decide Now", decide_entry_path(entry), :confirm => 'Are you sure? This will take the entry offline. Bidding for this item will stop.') if entry.expired.blank? %>
  <% end %>

<% end %>

<%= link_to "show", entry -%>
<%= link_to "edit", edit_entry_path(entry) %>
<%= link_to "remove", entry, :confirm => 'Are you sure you want to delete this entry?', :method => :delete %>

<% unless entry.bids.count < 1 || entry.expired.blank? %>
	<%= link_to "reactivate?", reactivate_entry_path(entry), :confirm => 'Are you sure you want to reactivate this entry?' %>
<% end %>


