<div id="show-comments">
	<%= content_tag :h3, 'Comments' %>
	<% unless @entry.comments.blank? %>
	<ul id='comments-list'>
		<% for comment in @entry.comments %>
		<li>
			<%= content_tag :span, comment.user_type + ':', :id => 'creator' %>
			<%= content_tag :span, comment.comment, :id => 'comment' %>
			<%= content_tag :span, comment.created_at.to_s(:short), :id => 'datetime' %>
		</li>
		<% end %>
	</ul>
	<% end %>

	<%= form_for :comment, :url => comments_path(:entry_id => @entry.id), :method => :post do |f| %>
		<%= f.text_field :comment %>
		<%= f.submit 'Add Comment' %>
	<% end %>
</div>
