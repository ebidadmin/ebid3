<span class="creator">
	<% unless message.user == current_user %>
		<%= message.user_type.titlecase %> said:
	<% else %>
		<%= content_tag :b, 'YOU said:', :class => 'orange' %>
	<% end %>
	<%= content_tag :b, short_date(message.created_at), :class => 'datetime white' %>
	<%= link_to 'reply', show_fields_messages_path(:msg_type => message.user_type, :entry => @entry, :open => message.open, :parent_id => message), :remote => true, :class => 'msg-link' %>
	<% if message.user == current_user || current_user.has_role?('admin') %>
		<%= link_to 'edit', edit_message_path(message, :entry => @entry), :remote => true, :class => 'msg-link' %>
		<%= link_to 'delete', message, :class => 'msg-link', :confirm => 'Are you sure you want to delete this message?', :method => :delete %>
	<% end %>
</span>
<span class="comment instruction">
	<%= message.message %> 
</span>
