<div id="msg-snippet">
	<% if current_user.has_role?('admin') %>
		<%= content_tag :span,"	Reply to message from #{message.user.username}", :class => 'creator' %>
	<% else %>
		<%= content_tag :span,"	Reply to message from #{message.user_type.titlecase}", :class => 'creator' %>
	<% end %>
	<%= content_tag :span, message.message, :class => 'comment instruction' %>
</div>
