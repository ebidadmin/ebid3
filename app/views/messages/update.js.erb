<% unless @order.present? %>
	$("#private").html("<%= escape_javascript(render 'messages/private_messages') %>");
	$("#public").html("<%= escape_javascript(render 'messages/public_messages') %>");
<% else %>
	$("#msg-list").html("<%= escape_javascript(render 'messages/order_messages') %>");
<% end %>
$("#msg-fields").html("<%= escape_javascript(render 'messages/buttons') %>");
$("#confirmation").html("<%= escape_javascript(render 'messages/flash_notice') %>").effect("highlight", {}, 4000).fadeOut(700);
$(".spinner").hide();
