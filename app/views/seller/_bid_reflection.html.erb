<% if last_bid && last_bid.amount != last_bid.total %>
  Each: <%= render 'bids/bid', :bid => last_bid %><br>
  Total: <%= render 'bids/total', :bid => last_bid %>
<% else %>
  <%= render 'bids/bid', :bid => last_bid %>
<% end %>

<% if last_bid  %>
<%= content_tag :p, last_bid.status, :class => "status #{quote_class(last_bid.status)}" %>
<%#= content_tag :p, "speed: #{distance_of_time_in_words(last_bid.bid_speed)} | #{last_bid.user.username}" , :class => 'instruction'   %>
	<%= content_tag :p, "speed: #{distance_of_time_in_words(last_bid.bid_speed)}" , :class => 'instruction'   %>
	<%= content_tag :span, "> #{last_bid.user.username}", :class => 'instruction highlight' if last_bid.user != current_user  %>
<% end %>
