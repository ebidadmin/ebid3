<% title @title %>

<%= render 'admin/filter_by_buyer' if @buyers %>
<%= render 'buyer/filter_by_search' %>

<%= content_tag :p, (content_tag :strong, 'What is a Decline Fee? ') + 'Sometimes, the Buyer cannot order (for one reason or another).  
  We collect a Decline Fee, ' + (content_tag :strong, 'then you receive 50% of it for your effort in posting the “winning” bid.'), :class => 'instruction' %>

<% unless @decline_fees.blank? %>
	<h2 class="highlight">
		Total Decline Fees Collected: <%= ph_currency(@search.collect(&:fee).sum) %> /
		Your Share: <%= ph_currency(@search.collect(&:split_amount).sum) %>
	</h2>
<%= will_paginate @decline_fees  %>
<%= page_info @decline_fees %>

<table id="seller-split">
	<thead>
    <%= content_tag :th, 'Vehicle', :class => 'vehicle' %>
		<th class="">
	    <%= content_tag :div, 'Decline Type', :class => 'fee-type' %>
	    <%= content_tag :div, 'Part Description', :class => 'part' %>
	    <%= content_tag :div, 'Your Winning Bid', :class => 'lowest-bid' %>
	    <%= content_tag :div, 'Decline Fee', :class => 'fee' %>
			<%= content_tag :div, 'Your Share', :class => 'fee' -%>
		</th>
	</thead>
	<% @group.each do |entry, fees|  %>
  <tr>
		<td class="vehicle">	
      <%= content_tag :p, (link_to truncate(entry.vehicle, :length => 35), seller_show_path(:id => entry)) %>
			<p><%= entry.plate_no %></p>
		  <%= content_tag :p, "#{fees.count} of #{pluralize entry.line_items.count, 'item'}" %> 	
		</td>
	  <td>
  	<% for fee in fees %>
    <%= content_tag :div, "#{fee.fee_type}: #{content_tag :span, fee.created_at.strftime('%b %d'), :class => 'instruction'}".html_safe, :class => 'fee-type' %>
    <%= content_tag :div, fee.line_item.part_name, :class => 'part' %>
	    <%= content_tag :div, (number_to_currency fee.bid_total, :unit => ""), :class => 'lowest-bid'  %>
	    <%= content_tag :div, (number_to_currency fee.fee, :unit => ""), :class => 'fee' %>
			<%= content_tag :div, (number_to_currency fee.split_amount, :unit => ""), :class => 'fee' -%>
		<% end %>
		</td>                          
	</tr>
	<% end %>
</table>
<% end %>

<%= will_paginate @decline_fees  %>
