<% unless item.bids.where(:user_id => @company.users).blank? %>
	<%= content_tag :div, (render 'seller/bid_reflection', :last_bid => item.last_bid(@company.users, 'original')), :class => 'bid-amount' %>
	<%= content_tag :div, (render 'seller/bid_reflection', :last_bid => item.last_bid(@company.users, 'replacement')), :class => 'bid-amount' %>
	<%= content_tag :div, (render 'seller/bid_reflection', :last_bid => item.last_bid(@company.users, 'surplus')), :class => 'bid-amount' %>
<% else %>
	<%= content_tag :p, "#{content_tag :strong, 'You did not bid'} on this item when it was Online on #{item.entry.online.strftime('%b %d, %Y')}.".html_safe, :class => 'instruction' unless item.status == 'Online' || item.status == "Relisted" %>
<% end %>
