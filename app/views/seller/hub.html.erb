<% title @title %>

<%= render 'seller/filter_by_brand' if @brand_links.count > 1 %>

<%= will_paginate @entries %>
<%= page_info @entries %>

<%- unless @entries.count < 1 -%>
<table id="main-bids">
	<thead>
		<th class="vehicle">Vehicle</th>
		<th class="requirements">Requirements</th>
		<th class="status">Status</th>
	</thead>
	<%- for entry in @entries -%>
	<%# if entry.company.friends.include?(current_user.company) %>
	<tr>
		<td class="vehicle">
			<%= render 'shared/photo_first', :entry => entry %>
      <div id="details">
        <%#= content_tag :p, (link_to entry.vehicle, seller_show_path(current_user, entry.brand, entry)) %>
        <%= content_tag :p, (link_to entry.vehicle, seller_show_path(:id => entry)) %>
        <%= content_tag :p, entry.plate_no %>
			</div>
		</td>
		<td class="requirements">
      <%= content_tag :p, (content_tag :span, 'Delivery:') + (content_tag :b, entry.city.name, :class => 'highlight') if entry.city %>
      <%= content_tag :p, (content_tag :span, 'Credit:') + entry.term.term_name if entry.term %>
      <%#= content_tag :p, (content_tag :span, 'Parts:') + (link_to (pluralize entry.line_items.online.collect(&:quantity).sum, "item"), seller_show_path(:brand => entry.brand, :id => entry)) %>
      <%= content_tag :p, (content_tag :span, 'Parts:') + (link_to (pluralize entry.line_items.online.collect(&:quantity).sum, "item"), seller_show_path(:id => entry)) %>
		</td>
		<td class="status">
      <%= content_tag :p,( 'Created: '+ entry.created_at.strftime('%b %d, %a')), :class => 'instruction' %>
      <%= content_tag :p, 'Online until: '+ entry.bid_until.strftime('%b %d') + ' (maximum)' %>
			<p class="instruction large">
				<% unless entry.bids.user_id_eq(current_user).blank? %>
				(<%= image_tag '/images/base/yes.png' -%> you posted Item Bids <%= link_to 'here', seller_show_path(:id => entry) %> )
				<% else %>
				<%= link_to 'bid here', seller_show_path(:id => entry) %> 
				<% end %>
			</p>
		</td>
	</tr>
	<%# end %>
	<%- end -%>
</table>
<%- end -%>


