<% title "Bids for #{@entry.vehicle}" %>

<%= render 'shared/photo_set' %>
<%= render 'shared/info_vehicle', :entry => @entry %>

<%= content_tag :h3, 'Status: ' + @entry.buyer_status , :id => 'bidding-message', :class => 'highlight' %>

<%= form_tag bids_path(:entry_id => @entry), :remote => true do |f|  %>
	
	<table id="item-bids">
		<%= render 'bid_table' %>
	</table>
	
	<div class="page-links">
		<%= submit_tag 'Place Bid/s', :class => 'button' unless @entry.buyer_status != 'Online' %>
	  <%= link_to "[Done]", :back %>
	</div>
	
<% end %>

<% unless @entry.buyer_status == 'Online' && @entry.expired.nil? %>
  <% content_for :subnav do %>
	<%= content_tag :div, ("Note: the status of this entry is " + (content_tag :strong, current_status_or_expired?(@entry)) + 
	". It\'s no longer available for bidding.").html_safe, :id => 'flash_warning'  %>
  <% end  %>	
<% end %>

<% content_for :javascripts do %>
	<%= stylesheet_link_tag 'shadowbox', :cache => false %>
	<%= javascript_include_tag 'shadowbox', :cache => false %>
	<script type="text/javascript">
			Shadowbox.init();		
	</script>
<% end %>

