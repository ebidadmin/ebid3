<% title 'Edit Bid' %>
<%= simple_form_for @bid, :validate => true do |f| %>
	<%= f.association :user, :collection => Role.find(3).users.map { |u| [u.username, u.id] } %>
	<%= f.input :entry_id %>
	<%= f.input :line_item_id %>
	<%= f.input :amount %>
	<%= f.input :quantity %>
	<%= f.input :bid_type %>
	<%= f.input :status %>
	<%= f.association :car_brand %>
	<%= f.input :bid_speed %>
	<%= f.input :created_at do %>
	  <%= f.text_field :created_at, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :updated_at do %>
	  <%= f.text_field :updated_at, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :ordered do %>
	  <%= f.text_field :ordered, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :order_id %>
	<%= f.input :delivered do %>
	  <%= f.text_field :delivered, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :paid do %>
	  <%= f.text_field :paid, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :declined do %>
	  <%= f.text_field :declined, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<%= f.input :expired do %>
	  <%= f.text_field :expired, :id => 'datepicker', :size => 25, :placeholder => 'Click to select date' %>
	<% end %>
	<div class='page-links'>
	<%= f.submit %>
	</div>
<% end %>

<% content_for :javascripts do %>
	<% stylesheet 'blitzer/jquery-ui-1.8.6.custom' %>
	<script type="text/javascript" charset="utf-8">
	$(function() {
		$('#datepicker').datepicker({ 
				dateFormat: "yy-mm-dd",
				maxDate: 0,
				numberOfMonths: 2,
				showButtonPanel: true, 
				showOn: "both",
				buttonImage: "/images/calendar.gif",
				buttonImageOnly: true
		});
	});
	</script>
<% end %>
