<% unless @new_bids.blank? && @existing_bid.blank? %>
	<% @line_items.each do |line_item| %>
		$("#amounts_<%= line_item.id %>").html("<%= escape_javascript(render 'seller/bid_set', :item => line_item) %>")
	<% end %>
	$("#bidding-message").addClass('green').text("Thanks for bidding!").effect("highlight", {}, 3000);
	$("h3.highlight").addClass('green').text("Thanks for bidding!").effect("highlight", {}, 3000);
	$("#bid-form")[0].reset();    
<% end %>

