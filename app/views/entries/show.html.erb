<% title "#{@entry.vehicle}" %>
<%= link_to 'Print Preview', print_entry_path(@entry), :id => 'print-preview' unless @line_items.blank? %>
<%= content_tag :h3, "Status: #{@entry.buyer_status}".html_safe, :class => "#{quote_class( @entry.buyer_status)}", :id => 'status' %>

<%= render 'shared/info_vehicle', :entry => @entry %>
<%= render 'shared/photo_set' %>
<div id="select-parts-box">
	<% unless @line_items.blank? %>
		<%= render 'entries_show' %>
	<% else %>
		<%= render 'cart/cart', :entry => @entry %>
	<% end %>
</div>

<% content_for :javascripts do %>
	<% stylesheet 'shadowbox' %>
	<%= javascript_include_tag 'shadowbox' %>
	<script type="text/javascript">
			Shadowbox.init();		
	</script>
<% end %>
