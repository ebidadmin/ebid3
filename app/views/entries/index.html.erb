<% title @title %>

<%= render 'buyer/filter_by_user' unless @user_group.nil? %>
<%= render 'buyer/filter_by_status' unless @status_tags.nil? %>
<%= render 'buyer/filter_by_search' %>

<% unless @entries.count < 1 %>
	<% unless current_user.has_role?('admin')  %>
		<%= content_tag :div, "#{content_tag :strong, 'Hi ' + current_user.first_name + '!'} Just to inform you, <strong>Bidding Speeds</strong> will now be computed
		based on <strong>the date the Entry was put online</strong> instead of the date it was created.".html_safe, :id => 'flash_info' if current_page? buyer_results_path %>
	
		<%= render 'buyer/entries_table'  %>
	<% else %>
		<%= render 'admin/entries_table' %>
	<% end %>
<% else %>
	<%= content_tag :h3, ('Sorry, no entries found under '  + (content_tag :span, "[ #{params[:user_id]} > #{request.parameters['action']} ]", :class => 'highlight')).html_safe %>
<% end %>

<%= content_tag :div, (link_to 'Create New Entry', new_user_entry_path(current_user), :class => 'button'), :class => 'page-links'  %>
