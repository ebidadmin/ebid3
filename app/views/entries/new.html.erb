<% title "Create New Entry" %>

<fieldset>
	<legend>STEP 1 - Choose Parts</legend>
  <%= render 'parts_selection' %>
	<%= render 'parts_in_cart' %>
</fieldset>	

<%= nested_form_for @entry, :url => user_entries_path(current_user), :remote => true, :html => { :multipart => true } do |f| %>
	<fieldset id="vehicle">
		<legend>STEP 2 - Describe the vehicle</legend>
		<%= render 'choose_vehicle', :f => f %>
		<%#= render 'semantic_vehicle', :f => f %>
	</fieldset>
	<fieldset id="attachments">
		<legend>STEP 3 - Attach Photos</legend>
		<%= render 'choose_attachments', :f => f %>
	</fieldset>
	<p class="page-links">
		<%= f.submit %>
		or <%= link_to "Cancel", user_entries_path(current_user) %>
	</p>
<% end %>

<% javascript 'dynamic_models' %>
<%= javascript_include_tag 'jquery-ui.min', 'nested_form' %>
<%= stylesheet_link_tag 'blitzer/jquery-ui-1.8.6.custom', :cache => true %>
