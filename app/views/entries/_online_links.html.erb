<% if current_page? buyer_pending_path %>
		
		<%= link_to "select parts", select_parts_entry_path(entry) unless entry.line_items.present? %> 
		<%= link_to "attach photos", attach_photos_entry_path(entry) unless entry.photos.present? %>
		<p>
			<%= link_to "put online", put_online_entry_path(entry) if entry.line_items.present? && entry.photos.present? && entry.bid_until.blank?  %>
			<%= link_to "edit", edit_entry_path(entry) %>
			<%= link_to "remove", entry, :confirm => 'Are you sure you want to delete this entry?', :method => :delete %>
		</p>

<% elsif current_page? buyer_online_path %>

	<%= render 'entries/reveal_bids_button', :entry => entry %>

<% elsif current_page? buyer_results_path %>

  <%- unless entry.bids.blank?   -%>
  	<%= link_to "View Bids", entry -%>
  <%- end -%>

<% else %>

  <% unless entry.chargeable_expiry == false || entry.expired.blank? %>
  	<%= link_to "Reactivate?", reactivate_entry_path(entry), 
  		:confirm => 'Are you sure you want to reactivate this entry?' -%>
  <% end %>

<% end %>

