<%- if order.status == "PO Released" -%>

	<%= content_tag :p, 'Status: ' + order.status + " (#{time_ago_in_words order.created_at} ago) " %>
	<%= content_tag :p, ('Please ' + link_to("Confirm the PO", order) + ' now.').html_safe, :class => 'instruction' %>

<%- elsif order.status == "For Delivery" -%>

	<%= form_tag seller_status_order_path(order), :method => :put do %>
		Status: <%= select_tag :seller_status, options_for_select(["For Delivery", "Delivered"], [order.status]), {:onchange => 'this.form.submit()'} %>
		<%= content_tag :span, " #{time_ago_in_words order.updated_at} ago"  %> 
	<% end %>
	<%= content_tag :span, ('(Please update this status ' + (content_tag :strong, 'if Delivered') + ') ').html_safe  %>

<%- elsif order.status == "Delivered" -%>

	<%= form_tag seller_status_order_path(order), :method => :put do %>
		Status: <%= select_tag :seller_status, options_for_select(["Delivered", "Paid"], [order.status]), {:onchange => 'this.form.submit()'} %>
		<%= content_tag :span, " as of #{order.delivered.strftime('%b %d')}" unless order.delivered.nil? %>
	<% end %>
	<%= content_tag :p, ('(Please update this status ' + (content_tag :strong, 'if Paid') + ') ').html_safe  %>

<%- elsif order.status == "Paid" -%>

	<%= content_tag :strong, 'Paid: ' + order.paid.strftime('%b %d') unless order.paid.nil? %>
	<%= content_tag :p, ("(Please #{link_to 'rate your buyer', new_order_rating_path(order)} to close this item.)").html_safe, :class => 'instruction' unless order.ratings.where(:user_id => current_user).exists? %><br>

	<% if order.ratings.where(:user_id => current_user).exists?  %>
    <%= content_tag :span, "Waiting for the buyer to rate you also ... ", 
    :class => 'instruction' unless order.rating.where(:ratee_id => current_user).exists? %>
	<% end %>

<%- elsif order.status == "Closed" -%>

	<%= content_tag :strong, order.status + ' ' %>

<%- end -%>
