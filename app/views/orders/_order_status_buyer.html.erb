<% if order.status == "For Delivery" %>
	
	<%= order.status %> (<%= order.confirmed.strftime('%b %d') %>)&nbsp;

<% elsif order.status == "Delivered" %>

	Delivered: <%= order.delivered.strftime('%b %d') unless order.delivered.nil? %><br>
	<%= link_to "Rate Seller", new_order_rating_path(order) unless current_user.has_role?('admin') || order.ratings.where(:user_id => current_user.company.users).exists? %>
	<% if order.ratings.where(:user_id => current_user.company.users).exists? %>
    <%= content_tag :span, "Waiting for the seller to rate you also ...  ", 
    :class => 'instruction highlight' unless order.ratings.where(:ratee_id => current_user).exists? %>
	<% end %>

<% elsif order.status == "Paid" %>
 
	<strong><%= order.status %>: <%= order.paid.strftime('%b %d') unless order.paid.nil? %></strong><br>

	<%= link_to "Rate Seller", new_order_rating_path(order) unless current_user.has_role?('admin') || order.ratings.where(:user_id => current_user.company.users).exists? %>
	<% if order.ratings.where(:user_id => current_user.company.users).exists?  %>
    <%= content_tag :span, "Waiting for the seller to rate you also ...  ", 
    :class => 'instruction highlight' unless order.ratings.where(:ratee_id => current_user).exists? %>
	<% end %>

<% else %>

	<%= order.status %> (<%= order.created_at.strftime('%b %d') %>)&nbsp;

<% end %>
